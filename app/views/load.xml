
<Alloy id="load">
	
	<!-- load -->
	<View class="page" id="content">
		
		<View class="wrapper">
		
			<Label class="page__title">Weight of load</Label>
			
			<Label class="page__description">Please input the weight of the load to be lifted with the sling, then press Next.</Label>
			
			<View class="content--container">
				
				<Label class="page__title">Load in Tonnes (t)</Label>
			
			</View>
			
			<View class="content--container">
				
				<View class="input-holder">
				
					<TextField id="tonne" class="digit-input" value="00" clearOnEdit="true" returnKeyType="Titanium.UI.RETURNKEY_DONE">
						<!-- Sets the keyboardToolbar property -->
			            <KeyboardToolbar platform="ios">
			                <Toolbar>
			                    <Items>
			                        <FlexSpace/>
			                        <Button id="tonneDone">Done</Button>
			                    </Items>
			                </Toolbar>
			         </KeyboardToolbar>
					</TextField>
					
					<Label class="fullStop">.</Label>
					
					<TextField id="fraction" class="digit-input" value="00" clearOnEdit="true">
						<!-- Sets the keyboardToolbar property -->
			            <KeyboardToolbar platform="ios">
			                <Toolbar>
			                    <Items>
			                        <FlexSpace/>
			                        <Button id="fractionDone">Done</Button>
			                    </Items>
			                </Toolbar>
			         </KeyboardToolbar>
					</TextField>
				
				</View>
			
			</View>
	
		</View>
		
	<!-- load -->	
	</View>
	
</Alloy>