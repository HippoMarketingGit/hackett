<Alloy id="register">
	
	<Window class="background">
		
		<View id="header" class="header">
			<ImageView class="logo" image="/images/WHC--logo--transparent.png" />
			<Label class="tel" id="tel"></Label>
		</View>
		
		<ScrollView id="scrollView" top="4dip" left="0" width="100%" layout="vertical">
		
			
			<View id="container" width="90%" top="10dip" bottom="10dip" height="Ti.UI.SIZE" layout="vertical">
					
				<View class="content--container">
					<Button id="back" class="button--back" />
				</View>
			
				<View class="content--container">
					<Label>Your name *</Label>
					<TextField id="name" class="input--primary"/>
				</View>
				
				<View class="content--container">
					<Label>Company name *</Label>
					<TextField id="companyName" class="input--primary"/>
				</View>
				
				<View class="content--container">
					<Label>Phone number *</Label>
					<TextField id="phoneNumber" class="input--primary"/>
				</View>
				
				<View class="content--container">
					<Label>Postcode *</Label>
					<TextField id="postcode" class="input--primary"/>
				</View>
				
				<View class="content--container">
					<Label>Email address *</Label>
					<TextField id="emailAddress" class="input--primary"/>
				</View>
				
				<View class="content--container">
					<Label>Password *</Label>
					<TextField id="password1" passwordMask="true" class="input--primary" />
				</View>

				<View class="content--container">
					<Label>Password (confirm) *</Label>
					<TextField id="password2" passwordMask="true" class="input--primary" />
				</View>
				
				<View class="content--container">
					
					<View class="content--horizontal">
						
						<Button id="mailingList" class="checkBox" />
						<Label class="content--horizontal--label">Yes please, add me to the mailing list</Label>
					
					</View>
					
				</View>
				
				<View class="content--container">
					<Button id="submit" class="button--primary" onClick="registerUser" />
				</View> 
				
			</View>
		
		</ScrollView>
			
	</Window>
	
</Alloy>