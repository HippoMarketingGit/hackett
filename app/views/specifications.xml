<Alloy id="specifications">
	
	<Window class="background" layout="vertical">
		
		<View class="content--container" top="30dip" left="5%">	
			<ImageView id="close" left="0" image="/images/WHC-close.png" height="24dip" width="24dip" onClick="closeModal"></ImageView>
		</View>
		
		<View top="20dip" height="1dip" width="100%" backgroundColor="#f7561e"></View>
		
		<ScrollView id="scrollView" top="4dip" left="0" width="100%" layout="vertical">
	
			<!-- Lifting Points -->
			<View class="page" id="content" top="10dip" height="Ti.UI.SIZE" layout="vertical">
				
				
				<!-- Start of tablet info -->
				<View id="values" class="wrapper" layout="horizontal" height="Ti.UI.SIZE" width="90%" left="5%" bottom="8dip" formFactor="tablet">
					
					<View id="labels" layout="vertical" height="Ti.UI.SIZE" width="20%" top="0">
						<Label class="heading" left="0"></Label>
						<Label top="4dip" left="0">Type: </Label>
						<Label top="4dip" left="0" id="labelGrade">Grade: </Label>
						<Label top="4dip" left="0">Legs: </Label>
						<Label top="4dip" left="0">Load (t): </Label>
						<Label top="4dip" left="0">Length (m): </Label>
						<Label top="4dip" left="0">Size (mm): </Label>
					</View>
					
					<View id="slingRequirements" layout="vertical" height="Ti.UI.SIZE" width="40%" top="0">
					
						<Label class="heading" left="0">Your requirements:</Label>
						
						<Label top="4dip" left="0" id="slingType"></Label>						
						<Label top="4dip" left="0" id="grade"></Label>
						<Label top="4dip" left="0" id="legs"></Label>
						<Label top="4dip" left="0" id="load"></Label>
						<Label top="4dip" left="0" id="length"></Label>	
					</View>
					
					<View id="slingSpecification" layout="vertical" height="Ti.UI.SIZE" width="40%" top="0">
						
						<Label class="heading" left="0">Sling specification:</Label>
						
						<Label top="4dip" left="0" id="slingSpecType"></Label>
						<Label top="4dip" left="0" id="slingSpecGrade"></Label>
						<Label top="4dip" left="0" id="slingSpecLegs"></Label>
						<Label top="4dip" left="0" id="slingSpecLoad"></Label>
						<Label top="4dip" left="0" id="slingSpecLength"></Label>
						<Label top="4dip" left="0" id="slingSpecSize"></Label>
					</View>
				
				</View>
				<!-- End of tablet info -->
				
				
				<!-- Start of phone info -->
				<View id="valuesReqs" class="wrapper" layout="horizontal" height="Ti.UI.SIZE" width="90%" left="5%" bottom="8dip" formFactor="handheld">
					<Label class="heading" left="0" width="100%">Your requirements:</Label>
					<View id="labels" layout="vertical" height="Ti.UI.SIZE" width="40%" top="0">
						<Label top="4dip" left="0">Type: </Label>
						<Label top="4dip" left="0" id="labelGradeReq">Grade: </Label>
						<Label top="4dip" left="0">Legs: </Label>
						<Label top="4dip" left="0">Load (t): </Label>
						<Label top="4dip" left="0">Length (m): </Label>
					</View>
					<View id="slingRequirements" layout="vertical" height="Ti.UI.SIZE" width="60%" top="0">
						<Label top="4dip" left="0" id="slingType"></Label>						
						<Label top="4dip" left="0" id="grade"></Label>
						<Label top="4dip" left="0" id="legs"></Label>
						<Label top="4dip" left="0" id="load"></Label>
						<Label top="4dip" left="0" id="length"></Label>	
					</View>
				</View>
				
				<View id="valuesSling" class="wrapper" layout="horizontal" height="Ti.UI.SIZE" width="90%" left="5%" top="8dip" bottom="16dip" formFactor="handheld">
					<Label class="heading" left="0" width="100%">Sling specification:</Label>
					<View id="labels" layout="vertical" height="Ti.UI.SIZE" width="40%" top="0">
						<Label top="4dip" left="0">Type: </Label>
						<Label top="4dip" left="0" id="labelGradeSling">Grade: </Label>
						<Label top="4dip" left="0">Legs: </Label>
						<Label top="4dip" left="0">Load (t): </Label>
						<Label top="4dip" left="0">Length (m): </Label>
						<Label top="4dip" left="0">Size (mm): </Label>
					</View>
					<View id="slingSpecification" layout="vertical" height="Ti.UI.SIZE" width="60%" top="0">
						<Label top="4dip" left="0" id="slingSpecType"></Label>
						<Label top="4dip" left="0" id="slingSpecGrade"></Label>
						<Label top="4dip" left="0" id="slingSpecLegs"></Label>
						<Label top="4dip" left="0" id="slingSpecLoad"></Label>
						<Label top="4dip" left="0" id="slingSpecLength"></Label>
						<Label top="4dip" left="0" id="slingSpecSize"></Label>	
					</View>
				</View>
				<!-- End of phone info -->
				
				
				<View class="wrapper" layout="vertical" height="Ti.UI.SIZE" width="90%" left="5%">
					
					<View top="4dip" layout="horizontal" id="descriptionContainer">
						<Label left="0" id="description"></Label>
					</View>
					
					<View id="slingPartcode" layout="vertical" top="10dip">
				
						<Label left="0" textAlign="left" top="4dip" id="specPartcode"></Label>
						
					</View>
								
					<View top="10dip" layout="horizontal">
						<Label left="0" id="quotedPrice"></Label>
					</View>
					
					<Button id="viewSlingAssembly" onClick="viewSlingAssembly" title="View Sling Assembly" class="button--primary" top="10dip"/>
					<ImageView id="slingAssemblyImg" touchEnabled="False" width="auto"></ImageView>
					
					<Button id="requestQuote" onClick="sendQuote" title="Request Quote" class="button--primary" top="8dip"/>
					
					<Button id="backToDash" onClick="openDash" title="Back to Dashboard" class="button--secondary" top="8dip"/>
					
				</View>
				
			</View>
			
			<View height="1dip" width="100%" top="20dip" backgroundColor="#FFF"></View>
		
		</ScrollView>
	
	</Window>
	
</Alloy>